@model Ktvg.Crm.ViewModels.CustomerVM

<!-- Modal Đăng ký mới-->
@using (Html.BeginForm("Create", "Customers", FormMethod.Post))
{
    <div class="modal fade" id="installRegistrationModal" tabindex="-1" aria-labelledby="installRegistrationModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="installRegistrationModalLabel">TẠO MỚI</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="LocateType" id="LocateType1" value="1"
                                    checked>
                                <label class="form-check-label" for="LocateType1">
                                    Đăng ký mới
                                </label>
                            </div>
                        </div>
                        <div class="form-group col-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="LocateType" id="LocateType2"
                                    value="2">
                                <label class="form-check-label" for="LocateType2">
                                    Gia hạn
                                </label>
                            </div>
                        </div>
                    </div>

                    <label class="form-label fw-bold">Thông tin khách hàng</label>

                    <div class="row">
                        <div class="col mb-6 mt-2">
                            @* TODO: Chuyển thành combobox *@
                            <div class="form-floating form-floating-outline">
                                <input type="text" class="form-control" asp-for="CustomerSource"
                                       placeholder="Ví dụ: CÔNG TY TNHH ĐẦU TƯ VÀ PHÁT TRIỂN KT VINA GROUP" required>
                                <label asp-for="CustomerName">Nguồn khách hàng <span class="text-danger">*</span></label>
                            </div>
                        </div>

                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                @* TODO: Tăng số tự động *@
                                <input type="text" class="form-control" asp-for="CustomerCode" placeholder="Ví dụ: KH00001"
                                    required>
                                <label asp-for="CustomerCode">Mã khách hàng <span class="text-danger">*</span></label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                <input type="text" class="form-control" asp-for="CustomerName"
                                    placeholder="Ví dụ: Nguyễn Văn A" required>
                                <label asp-for="CustomerName">Tên khách hàng <span class="text-danger">*</span></label>
                            </div>
                        </div>

                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                <input type="text" class="form-control" asp-for="PhoneNumber"
                                       placeholder="Ví dụ: +84969697931" required>
                                <label asp-for="PhoneNumber">Số điện thoại (+84xxxxxxxxx)<span class="text-danger">*</span></label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                <input type="text" class="form-control" asp-for="CustomerAddress"
                                       placeholder="Ví dụ: Lầu 5, số 15 Trần Khắc Chân, Phường Tân Định, Quận 1, Thành phố Hồ Chí Minh">
                                <label asp-for="CustomerAddress">Địa chỉ KH </label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                <input type="text" class="form-control" asp-for="VehicleType"
                                       placeholder="Ví dụ: Hyundai Stargazer">
                                <label asp-for="VehicleType">Tên dòng xe</label>
                            </div>
                        </div>

                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                <input type="text" class="form-control" asp-for="VehicleNumber"
                                    placeholder="Ví dụ: 50H12345" required>
                                <label asp-for="VehicleNumber">
                                    Biển số xe / Số khung <span class="text-danger">*</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <label class="form-label fw-bold mt-3">Thông tin định vị</label>
                    <div class="row">
                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                <input type="date" class="form-control" asp-for="RegistrationDate" required>
                                <label asp-for="RegistrationDate">
                                    Ngày lắp đặt <span class="text-danger">*</span>
                                </label>
                            </div>
                        </div>
                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                <select class="form-select" asp-for="DeviceInstalled">
                                    <option value="Taris" selected>Taris</option>
                                    <option value="BA">BA</option>
                                    <option value="TCT">TCT</option>
                                </select>
                                <label asp-for="DeviceInstalled">Thiết bị đang lắp</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                <select class="form-select" asp-for="InstallationType">
                                    <option value="GPS" selected>GPS</option>
                                    <option value="Nghị định 10">Nghị định 10</option>
                                </select>
                                <label asp-for="InstallationType">GPS / Nghị định 10</label>
                            </div>
                        </div>
                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                <input type="number" class="form-control" asp-for="PaymentAmount">
                                <label asp-for="PaymentAmount">Số tiền thanh toán</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col mb-6 mt-2">
                            <div class="form-floating form-floating-outline">
                                <textarea type="number" class="form-control h-px-100" asp-for="Remark" rows="3"></textarea>
                                <label asp-for="Remark">Ghi chú</label>
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="SendZaloConfirmation">
                            <label class="form-check-label" asp-for="SendZaloConfirmation">
                                Gửi tin xác nhận thanh toán (Zalo)
                                
                                @if ((bool)ViewData["IsValidToken"])
                                {
                                <span class="text-success font-italic">(Đã kết nối)</span>
                                }
                                else
                                {
                                <span class="text-danger font-italic">
                                    (Cần kết nối 
                                    @* TODO: Cần xử lý lại link*@
                                    <a class="fw-bold" asp-controller="ZaloOAuths" asp-action="Index" target="_blank">Kết nối</a>)
                                </span>
                                }
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-start">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>
}
