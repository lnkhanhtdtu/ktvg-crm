@model IEnumerable<Ktvg.Crm.Models.ContactPurpose>

@{
    ViewData["Title"] = "Mục đích tiếp xúc";
}
<!-- Content wrapper -->
<div class="content-wrapper">
<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
<!-- Basic Bootstrap Table -->
<div class="card">
